{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-close",
    {
      "identifier": "fs:allow-exists",
      "allow": [{"path": "**"}]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{"path": "**"}]
    }
  ]
}
